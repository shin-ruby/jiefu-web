<%= form_for(@message, url: messages_path, method: :post) do |f| %>
	<%= render 'admin/shared/error_messages', object: @message %>
		<div class="row">
			<div class="col-md-6">
				<%= f.label :name, t(".name") %>
				<%= f.text_field :name, class: 'form-control' %>
			</div>
			<div class="col-md-6">
				<%= f.label :mobile, t(".mobile") %>
				<%= f.text_field :mobile, class: 'form-control' %>
			</div>
		</div>
		<br>
		<div class="row">
			<div class="col-md-6">
				<%= f.label :email, t(".email") %>
				<%= f.email_field :email, class: 'form-control' %>
			</div>
			<div class="col-md-6">
				<%= f.label :company, t(".company") %>
				<%= f.text_field :company, class: 'form-control' %>
			</div>
		</div>
		<br>
		<div class="row">
			<div class="col-md-12">
				<%= f.label :content, t(".content") %>
				<%= f.text_area :content, class: 'form-control', rows: "10", placeholder: "..." %>
			</div>
		</div>
		<br>
		<%= f.submit class: "btn btn-primary" %>
<% end %>
