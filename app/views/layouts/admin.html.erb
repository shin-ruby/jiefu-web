            <li><%= link_to "关于我们", admin_about_path(1) %></li>
            <li><%= link_to "招聘信息", admin_careers_path %></li>
          </ul>
          <ul class="nav nav-sidebar">
            <li><%= link_to "客户留言", admin_messages_path %></li>
          </ul>
          <ul class="nav nav-sidebar">
            <li><%= link_to "管理员设置", admin_users_path %></li>
          </ul>
          <ul class="nav nav-sidebar">
            <li><a href="">网站技术支持</a></li>
          </ul>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
