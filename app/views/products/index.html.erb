<% provide(:title, "扬声器") %>

<div class="product-banner">
	<div class="container">
    <div class="content">
      <h2><%= t(".title") %></h2>
      <p><%= t(".content") %></p>
    </div>
  </div>
</div>

<div class="container product-list">

	<div class="btn-group advanced-search">
		<%= link_to search_path, class: "btn btn-primary" do %>
	    <i class="glyphicon glyphicon-search"></i> <%= t(".search") %>
		<% end %>
	</div>

	<% @products.each_slice(2) do |products| %>
		<div class="row">
			<% products.each do |product| %>
				<div class="col-md-6">
					<%= image_tag(product.photo1.url, class: "product-img") if product.photo1? %>
			  	<h4><%= product.name %></h4>
					<ul class="list-unstyled">
					  <li><%= t("products.size") %>mm : <%= product.size_length %>*<%= product.size_width %>*<%= product.size_height %></li>
					  <li><%= t("products.impedance") %>（Ω）: <%= product.impedance %></li>
					  <li>FO（Hz）: <%= product.fo %></li>
					  <li><%= t("products.rated_power") %>（W）: <%= product.rated_power %></li>
					  <li><%= t("products.sensitivity") %>（dB）: <%= product.sensitivity %></li>
					  <li><%= t("products.frequency") %> : <%= product.frequency %></li>
					</ul>
					<p><%= link_to t(".view_details"), product_path(product) %></p>
			  </div>
			<% end %>
		</div>
	<% end %>

	<%= will_paginate %>
</div>