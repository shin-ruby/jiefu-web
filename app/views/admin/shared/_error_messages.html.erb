<% if object.errors.any? %>
  <div id="error_explanation">
  	<div class="alert alert-danger">
			<%= pluralize(object.errors.count, "error") %> 保存数据库发生错误:
		</div>
    <ul>
    <% object.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>