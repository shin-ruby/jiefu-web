<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<h3>客户留言</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="table-list-a"><h4>姓名</h4></th>
      <th><h4>联系电话</h4></th>
      <th><h4>邮箱</h4></th>
      <th><h4>删除</h4></th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= link_to message.name, admin_message_path(message) %></td>
        <td><%= message.mobile %></td>
        <td><%= message.email %></td>
        <td><%= link_to '删除', admin_message_path(message), method: :delete, data: { confirm: '确认删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
